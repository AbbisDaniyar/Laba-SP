# ==================== БАЗА ДАННЫХ ====================
# Настройки PostgreSQL
POSTGRES_DB=emergencydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here          # ← ЗАМЕНИТЕ НА НАДЕЖНЫЙ ПАРОЛЬ
POSTGRES_PORT=5432

# ==================== ПРИЛОЖЕНИЕ ====================
# Порт и профиль Spring Boot
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=docker

# ==================== JWT АУТЕНТИФИКАЦИЯ ====================
# Для генерации JWT секрета выполните: openssl rand -base64 32
JWT_SECRET=generate_your_own_jwt_secret_min_32_chars  # ← СГЕНЕРИРУЙТЕ НОВЫЙ
JWT_EXPIRATION=900000           # 15 минут в миллисекундах
JWT_REFRESH_EXPIRATION=604800000  # 7 дней в миллисекундах

# ==================== TELEGRAM БОТ (ОПЦИОНАЛЬНО) ====================
# Создайте бота через @BotFather и получите токен
# Получите chat ID через @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here      # ← ЗАМЕНИТЕ НА ТОКЕН БОТА
TELEGRAM_CHAT_ID=your_telegram_chat_id_here          # ← ЗАМЕНИТЕ НА CHAT ID

# ==================== ФАЙЛЫ И ЗАГРУЗКИ ====================
FILE_UPLOAD_DIR=/uploads
MAX_FILE_SIZE=10MB

# ==================== CORS НАСТРОЙКИ ====================
CORS_ALLOWED_ORIGINS=http://localhost:8080

# ==================== ЛОГИРОВАНИЕ ====================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_DEMO=DEBUG

# ==================== КЭШИРОВАНИЕ ====================
CACHE_ENABLED=true
CACHE_TTL_MINUTES=10
