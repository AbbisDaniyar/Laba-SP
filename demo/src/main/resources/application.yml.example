spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/emergency_db
    username: postgres                    
    password: YOUR_DB_PASSWORD_HERE  # ← ЗАМЕНИТЕ
    driver-class-name: org.postgresql.Driver
  servlet:
    multipart:
      max-file-size: 5MB
      max-request-size: 5MB
  web:
    resources:
      static-locations: classpath:/static/,file:./uploads/
  
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true                       
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
    
  cache:
    type: simple

jwt:
  secret: "GENERATE_A_SECURE_RANDOM_STRING_HERE"  # ← ГЕНЕРИРУЙТЕ НОВЫЙ
  access-cookie-name: "access_token"
  refresh-cookie-name: "refresh_token"

logging:
  level:
    org.hibernate.SQL: DEBUG
    com.example.demo: INFO
    org.springframework.security: INFO

upload:
  path: uploads

telegram:
  bot:
    enabled: true
    token: "YOUR_TELEGRAM_BOT_TOKEN_HERE"  # ← ЗАМЕНИТЕ
    chat-id: "YOUR_CHAT_ID_HERE"  # ← ЗАМЕНИТЕ
    bot-username: bus_alert_system_bot