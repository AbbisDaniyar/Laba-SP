# Основная конфигурация Spring Boot приложения
# Используется для локальной разработки (без Docker)

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/${POSTGRES_DB:emergencydb}
    username: ${POSTGRES_USER:postgres}
    password: ${POSTGRES_PASSWORD:your_db_password_here}  # ← ЗАМЕНИТЕ
    driver-class-name: org.postgresql.Driver
  
  servlet:
    multipart:
      max-file-size: 5MB
      max-request-size: 5MB
  
  web:
    resources:
      static-locations: classpath:/static/,file:./uploads/
  
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true                       
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
    
  cache:
    type: simple

# JWT настройки
jwt:
  secret: ${JWT_SECRET:generate_your_own_jwt_secret}  # ← СГЕНЕРИРУЙТЕ НОВЫЙ
  expiration: ${JWT_EXPIRATION:900000}
  refresh-expiration: ${JWT_REFRESH_EXPIRATION:604800000}
  access-cookie-name: "access_token"
  refresh-cookie-name: "refresh_token"

# Логирование
logging:
  level:
    org.hibernate.SQL: DEBUG
    com.example.demo: INFO
    org.springframework.security: INFO

# Загрузка файлов
upload:
  path: uploads

# Telegram бот (опционально)
telegram:
  bot:
    enabled: true
    token: ${TELEGRAM_BOT_TOKEN:your_telegram_bot_token}  # ← ЗАМЕНИТЕ
    chat-id: ${TELEGRAM_CHAT_ID:your_chat_id}  # ← ЗАМЕНИТЕ
    bot-username: bus_alert_system_bot
